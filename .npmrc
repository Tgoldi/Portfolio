# Tell npm to not fail on optional dependencies
# This helps with platform-specific packages
# that might not be available for all platforms
ignore-optional=true

# Force use of node-gyp rebuild for any package
# that has a binding.gyp file
build-from-source=true

# Set NPM_CONFIG_PLATFORM to ensure packages are installed for the right platform
platform=linux

# Set global configuration options
prefer-offline=true
fund=false 