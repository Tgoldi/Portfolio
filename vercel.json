{
    "buildCommand": "npm run build",
    "cleanUrls": true,
    "framework": "vite",
    "installCommand": "npm install --no-optional",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)\\.(svg|jpg|png|js|css)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "build": {
        "env": {
            "NODE_OPTIONS": "--max_old_space_size=4096"
        }
    }
}